.card
    
    @extends $grider-4
    @extends $grider-tablet-6
    @extends $grider-phone-12
    
    cursor pointer
    background #ffffff
    box-shadow 0px 0px 6px #E2DFDF
    border-radius 5px
    overflow hidden
    margin-bottom 20px
    transition 0.5s
    
    .cover
        background #D3D3D3
        height 200px
        width 100%
        background-size cover
        
    .title
        text-align center
        color #2b5c7c
        height 50px
        width 100%
        line-height 50px
        font-size 16px
        
    &:hover
        background #2b5c7c
        .title
            color #ffffff
            
.cardList
    @extends $container
    overflow: auto
    margin 0 auto
    padding-top 30px
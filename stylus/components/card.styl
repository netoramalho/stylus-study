.card
    cursor pointer
    width 270px
    background #ffffff
    box-shadow 0px 0px 6px #E2DFDF
    border-radius 5px
    overflow hidden
    float left
    margin-left 28px
    margin-bottom 28px
    
    .cover
        background #D3D3D3
        height 200px
        width 100%
        background-size cover
    .title
        text-align center
        color #2b5c7c
        height 50px
        width 100%
        line-height 50px
            
.cardList
    overflow: auto
    margin 0 auto


/*
    Large Desktop
*/
@media (min-width: 996px)
    .card
        width 300px
        .title
            font-size 16px
    .cardList
        width 956px
        .card:nth-child(3n+1)
            margin-left 0px

/*
    Desktop
*/
@media (min-width: 900px) and (max-width: 996px)
    .cardList
        width 868px
        .card:nth-child(3n+1)
            margin-left 0px

/*
    Tablets
*/    
@media (min-width: 588px) and (max-width: 900px)
    .cardList
        width 568px
        .card:nth-child(odd)
            margin-left 0px
       
/*
    Mobile
*/     
@media (max-width: 587px)
    .cardList
        width 100%
        .card:nth-child(odd)
            margin-left 13px
    .card
        width 44%
        margin-left: 16px;
        margin-bottom: 16px;
        .title
            font-size 14px
            height 30px
            line-height 30px
        .cover
            height 100px